<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f4f4f4">

    <RelativeLayout
        android:id="@+id/title_bar_keywords"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#fafafa"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:text="KEY WORDS"
            android:textSize="15dp"
            android:textColor="#181818"
            android:gravity="center"
            />
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/keywords_sleep"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#fafafa"
        android:layout_below="@+id/title_bar_keywords"
        android:layout_marginTop="5dp"
        android:onClick="onClick"
        android:clickable="true">

        <ImageView
            android:id="@+id/keywords_sleep_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sleep_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/keywords_sleep_words"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="SLEEP"
            android:textSize="20dp"
            android:textColor="#181818"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/keywords_sleep_icon"
             />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/keywords_study"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#fafafa"
        android:layout_below="@+id/keywords_sleep"
        android:layout_marginTop="3dp"
        android:onClick="onClick"
        android:clickable="true">

        <ImageView
            android:id="@+id/keywords_study_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/study_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/keywords_study_words"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="STUDY"
            android:textSize="20dp"
            android:textColor="#181818"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/keywords_study_icon"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/keywords_boring"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#fafafa"
        android:layout_below="@+id/keywords_eat"
        android:layout_marginTop="3dp"
        android:onClick="onClick"
        android:clickable="true">

        <ImageView
            android:id="@+id/keywords_boring_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/boring_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/keywords_boring_words"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="BORING"
            android:textSize="20dp"
            android:textColor="#181818"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/keywords_boring_icon"
            />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/keywords_eat"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="#fafafa"
        android:onClick="onClick"
        android:clickable="true"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/keywords_study"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/keywords_eat_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/eat_icon"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/keywords_eat_words"
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="EAT"
            android:textSize="20dp"
            android:textColor="#181818"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_marginLeft="60dp"
            android:layout_toRightOf="@+id/keywords_eat_icon"
            />
    </RelativeLayout>

</RelativeLayout>
