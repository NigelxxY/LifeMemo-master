<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ececec">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/editText_note"
        android:hint="Enter note."
        android:gravity="top|left"
        android:paddingTop="9dp"
        android:paddingLeft="9dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:background="#f9f9f9"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_above="@+id/note_finishbutton"
        android:layout_marginBottom="20dp">

        <RadioGroup
            android:id="@+id/note_rg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">


                <RadioButton
                    android:id="@+id/button_sleep"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="@drawable/sleep_icon"
                    android:layout_marginRight="25dp"
                    android:gravity="left"
                    />

                <RadioButton
                    android:id="@+id/button_work"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="@drawable/study_icon"
                    android:layout_marginRight="25dp"
                    android:gravity="left"/>

                <RadioButton
                    android:id="@+id/button_meals"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="@drawable/eat_icon"
                    android:gravity="center"/>

                <RadioButton
                    android:id="@+id/button_play"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="@drawable/boring_icon"
                    android:layout_marginLeft="25dp"
                    android:gravity="right"/>

                <RadioButton
                    android:id="@+id/button_note"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:background="@drawable/notes_icon"
                    android:layout_marginLeft="25dp"
                    android:gravity="right"
                    />

        </RadioGroup>
    </RelativeLayout>

    <Button
        android:id="@+id/note_finishbutton"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#de5f6c"
        android:layout_alignParentBottom="true"
        android:text="finish"
        android:textColor="#f9f9f9"/>

</RelativeLayout>
